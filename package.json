{
  "name": "@mapbox/react-simple-surveyor",
  "version": "1.0.0",
  "description": "Simple higher-order React component for measuring a component's available width",
  "main": "dist/survey.js",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --single-quote --write '{,src/,test/}**/*.js'",
    "build": "rm -rf dist && babel src -d dist",
    "start": "budo test/test.js -d -l -o -- -t babelify",
    "test": "npm run start",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mapbox/react-simple-surveyor.git"
  },
  "keywords": [
    "react",
    "higher-order-component",
    "measure",
    "width"
  ],
  "author": "Mapbox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mapbox/react-simple-surveyor/issues"
  },
  "homepage": "https://github.com/mapbox/react-simple-surveyor#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "babelify": "^10.0.0",
    "budo": "^11.6.4",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "dependencies": {
    "debounce": "^1.2.0"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-dom": ">=16.0.0"
  },
  "lint-staged": {
    "{,src/,test/}**/*.js": [
      "eslint",
      "prettier --single-quote --write"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
